<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="recipe">
    <select id="list" resultType="Recipe">
        SELECT * FROM RECIPE
    </select>

    <insert id="add" useGeneratedKeys="true" keyProperty="recipeCode">
        INSERT INTO recipe(recipe_code, title, id, reg_date,intro,ingredients,takes)
        VALUES (NULL, #{title},#{id}, NOW(), #{intro},#{ingredients},#{takes})
    </insert>

    <update id="addUpdate">
        UPDATE recipe
        SET title=#{title},reg_date=NOW(),intro=#{intro},ingredients=#{ingredients},takes=#{takes}
        WHERE recipe_code=#{recipeCode}
    </update>
    <insert id="mainImg">
        INSERT INTO recipe_main_image
        VALUES(NULL,#{recipeCode},#{imgae.fileName},#{image.fileSize});
    </insert>

    <delete id="delete">
        DELETE FROM recipe
        where recipe_code=#{recipeCode}
    </delete>

    <select id="getRecipeCode" resultType="Recipe">
        SELECT *
        FROM recipe
        WHERE recipe_code=#{recipeCode}
    </select>

    <select id="checkCode" resultType="Recipe">
        SELECT *
        FROM recipe
        WHERE recipe_code=#{recipeCode}
    </select>

</mapper>